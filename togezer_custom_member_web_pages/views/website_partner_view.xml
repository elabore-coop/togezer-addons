<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="togezer_member_detail" model="ir.ui.view">
        <field name="name">Togezer Member details</field>
        <field name="inherit_id" ref="website_partner.partner_detail" />
        <field name="arch" type="xml">
            <xpath expr="//t[@name='Partner Details']" position="replace">
                <t name="Partner Details" t-name="website_partner.partner_detail">
                    <div id="wrap" class="oe_structure oe_empty" groups="base.group_user">
                        <!-- HEADER -->
                        <section
                            class="s_cover parallax s_parallax_is_fixed bg-black-50 pt96 pb50 s_parallax_no_overflow_hidden"
                            data-scroll-background-ratio="1" data-name="Cover"
                            style="background-image: none;">
                            <span class="s_parallax_bg oe_img_bg oe_custom_bg"
                                t-attf-style="#{partner.banner_image and ('background-image: url(%s);' % website.image_url(partner, 'banner_image'))} background-position: center;" />
                            <div class="container">
                                <div class="row">
                                    <div class="pt0 pb0 col-lg-1" />
                                    <div class="pt0 pb0 col-lg-3">
                                        <div t-field="partner.image_1920"
                                            t-options='{"widget": "image", "preview_image": "image_512", "class": "d-block mx-auto mb16"}' />
                                    </div>
                                    <div class="pt32 col-lg-7">
                                        <div class="col-lg-12 s_title" data-name="Title">
                                            <h1 class="s_title_thin"
                                                style="font-size: 62px; text-align: center; font-weight : 400;"
                                                t-field="partner.display_name">
                                                <br />
                                            </h1>
                                        </div>
                                    </div>
                                    <div class="pt0 pb0 col-lg-1" />
                                </div>
                            </div>
                            <div class="container">
                                <div
                                    t-if="partner.search_partner">
                                    <div class="s_text pt16 pb16 offset-lg-9 col-lg-3"
                                        data-name="Text">
                                        <b>
                                            <p class="s_title_thin"
                                                color="white"
                                                style="text-align: center; font-size: 18px; font-weight : 1000; background-color:#0f8b66;">
                                                SEARCHING PARTNERS
                                            </p>
                                        </b>
                                    </div>
                                </div>
                            </div>
                        </section>

                        <!-- BODY -->
                        <section class="s_text_block pt32 bg-white oe_custom_bg pb0" style="">
                            <div class="container">
                                <div class="row">
                                    <!-- LEFT COLUMN -->
                                    <div class="pt0 pb0 col-lg-4">
                                        <div>
                                            <h5>
                                                <font color="#efc532">
                                                    <a href="/members">
                                                        &#60;&#60; Back to members list
                                                    </a>
                                                </font>
                                            </h5>
                                        </div>
                                        <div class="s_card card bg-white w-100">
                                            <h4 class="card-header">
                                                <font style="font-size: 18px;">CONTACT</font>
                                            </h4>
                                            <div class="card-body">
                                                <p class="card-text" style="margin-bottom:0px;"
                                                    t-field="partner.self"
                                                    t-options="{                  &quot;widget&quot;: &quot;contact&quot;,                  &quot;fields&quot;: [&quot;phone&quot;, &quot;email&quot;, &quot;website&quot;]              }">
                                                </p>
                                            </div>
                                        </div>
                                        <div class="s_card card bg-white w-100">
                                            <h4 class="card-header">
                                                <font style="font-size: 18px;">ADDRESS</font>
                                            </h4>
                                            <div class="card-body">
                                                <p class="card-text" style="margin-bottom:0px;"
                                                    t-field="partner.self"
                                                    t-options="{                  &quot;widget&quot;: &quot;contact&quot;,                  &quot;fields&quot;: [&quot;address&quot;]              }">
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                    <!-- RIGHT COLUMN -->
                                    <div class="pt32 col-lg-8 pb40 bg-white">
                                        <t t-if="partner">
                                            <h2>
                                                <font color="#efc532">AGENCY INFORMATION</font>
                                            </h2>
                                            <div t-if="partner.company_category">
                                                <t t-foreach="partner.company_category"
                                                    t-as="category">
                                                    <font
                                                        color="white"
                                                        style="text-align: center; font-size: 18px; font-weight : 1000; background-color:#0f8b66; margin-right: 4px">
                                                        <span t-field="category.name" />
                                                    </font>
                                                </t>
                                                <br />
                                                <br />
                                            </div>
                                            <div t-field="partner.website_description" />
                                            <t groups="website.group_website_publisher">
                                                <h2
                                                    class="css_non_editable_mode_hidden o_not_editable">
                                                    Short Description for List View
                                                </h2>
                                                <div class="css_non_editable_mode_hidden"
                                                    t-field="partner.website_short_description" />
                                            </t>
                                        </t>
                                    </div>
                                </div>
                            </div>
                        </section>
                    </div>
                    <div id="wrap_offline" class="oe_structure oe_empty" groups="base.group_public">
                        <section class="s_text_image bg-beta pt0 pb0" data-name="Image - Text">
                            <div class="container">
                                <div class="row align-items-center">
                                    <div class="col-lg-5 pt16 pb16">
                                        <img
                                            src="/web/image/9938/AGITATEUR%20DE%20COMMUNAUT%C3%A9s%20%2815%29.png"
                                            class="img img-fluid mx-auto"
                                            alt="Odoo â€¢ Image et Texte" data-original-title=""
                                            title="" aria-describedby="tooltip114393"
                                            style="transform: translateX(18.7%);" />
                                    </div>
                                    <div class="pt16 pb16 col-lg-6">
                                        <h2>
                                            <font style="color: rgb(0, 0, 0); font-size: 48px;">
                                                OOPS! WRONG WAY?
                                            </font>
                                        </h2>
                                        <p>
                                            <font style="color: rgb(0, 0, 0);">
                                                Only the Togezer community can access this page!
                                            </font>
                                        </p>
                                        <p>
                                            <font style="color: rgb(0, 0, 0);">
                                                Do not hesitate to contact and join us!
                                            </font>
                                        </p>
                                        <div class="s_btn pt16 pb16 text-left" data-name="Button">
                                            <a href="/contact-us" class="btn btn-primary"
                                                data-lt-tmp-id="lt-120468" spellcheck="false"
                                                data-gramm="false" data-original-title=""
                                                title="">Let's catch up?</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </section>
                    </div>
                </t>
            </xpath>
        </field>
    </record>
</odoo>